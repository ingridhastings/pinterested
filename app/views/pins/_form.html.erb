<!-- tells the form to allow multipart stuff (images) -->

<%= simple_form_for @pin, html: {
    multipart: true } do |f| %>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
<% end %>
