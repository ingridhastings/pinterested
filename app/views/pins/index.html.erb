<div class="jumbotron">
<p id="notice"><%= notice %></p>
<h1>Listing Pins</h1>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody><p class="lead">
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin %></td>

<!-- if the user that created the pin is the same as the current user -->
<!-- show the edit links, otherwise don't -->

        <% if pin.user == current_user %>
        <!-- already called @pin to call database table in earlier loop -->

        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    </p>
  </tbody>
</div>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
